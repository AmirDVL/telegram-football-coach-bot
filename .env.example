# 🤖 Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Get your Telegram user ID from @userinfobot
ADMIN_ID=your_telegram_user_id

# 🗄️ Database Configuration
# Set to 'true' to use PostgreSQL, 'false' for JSON files
USE_DATABASE=false

# PostgreSQL Database Settings (only if USE_DATABASE=true)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_coach_bot
DB_USER=postgres
DB_PASSWORD=your_secure_password

# 🛡️ Production Settings
# Set to 'false' in production
DEBUG=false

# 💳 Payment Configuration
# Bank card details for payment
PAYMENT_CARD_NUMBER=1234-5678-9012-3456
PAYMENT_CARD_HOLDER=Your Name Here

# 🌐 Webhook Configuration (optional - for high traffic)
# WEBHOOK_URL=https://yourdomain.com/webhook
# WEBHOOK_PORT=8443

# 📊 Analytics and Monitoring (optional)
# ANALYTICS_ENABLED=true
# SENTRY_DSN=your_sentry_dsn_here

# 🔐 Security Settings (optional)
# RATE_LIMIT_ENABLED=true
# MAX_REQUESTS_PER_MINUTE=60
# ENCRYPTION_KEY=your_encryption_key_here
